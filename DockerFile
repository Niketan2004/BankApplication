# Stage 1: Build React Frontend
FROM node:20-alpine AS frontend
WORKDIR /app

COPY src/main/Frontend/package*.json ./
RUN npm install

COPY src/main/Frontend .
RUN npm run build

# Stage 2: Build Spring Boot Backend (Maven)
FROM maven:3.9.6-eclipse-temurin-17 AS backend
WORKDIR /app

COPY pom.xml .
RUN mvn dependency:go-offline

COPY src ./src
COPY sequence.sql ./
RUN mvn clean package -DskipTests

# Stage 3: Production Image
FROM eclipse-temurin:17-jdk-alpine
VOLUME /tmp
WORKDIR /app

# Copy backend jar
COPY --from=backend /app/target/BankApplication-0.0.1-SNAPSHOT.jar app.jar

# Copy built React frontend to Spring Boot static resources
COPY --from=frontend /app/build/ /app/frontend/

# Optional: Copy build assets to Spring Boot static folder
RUN mkdir -p /app/static
COPY --from=frontend /app/build/ /app/static/

# Expose default Spring Boot port
EXPOSE 8080

# Start the app
ENTRYPOINT ["java", "-jar", "app.jar"]
